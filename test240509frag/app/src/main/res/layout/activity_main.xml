<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/fragmentFrame"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#FFEB3B"
        app:layout_constraintBaseline_toTopOf="parent"></FrameLayout>


    <Button
        android:id="@+id/buttonRedFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Red Fragment"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/buttonBlueFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Blue Fragment"
        app:layout_constraintBottom_toTopOf="@+id/buttonRedFragment" />


</androidx.constraintlayout.widget.ConstraintLayout>